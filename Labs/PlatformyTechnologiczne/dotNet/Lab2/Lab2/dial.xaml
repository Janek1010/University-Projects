<Window x:Class="Lab2.dial"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="dial" Height="470" Width="330">
    <Grid>
        <Label Margin="20, 20, 230, 390">Name:</Label>
        <TextBox x:Name="TextFieldDialog" Margin="70,25,50,390"></TextBox>
        <RadioButton x:Name="radioFile" IsChecked="False" Margin="100,60,150,360">File</RadioButton>
        <RadioButton x:Name="radioDirectory" IsChecked="False" Margin="180,60,50,360">Directory</RadioButton>
        <CheckBox x:Name="CB_ReadOnly" Margin="100,100,100,320">ReadOnly</CheckBox>
        <CheckBox x:Name="CB_Archive" Margin="100,120,100,300">Archive</CheckBox>
        <CheckBox x:Name="CB_Hidden" Margin="100,140,100,280">Hidden</CheckBox>
        <CheckBox x:Name="CB_System" Margin="100,160,100,260">System</CheckBox>
        <Button x:Name="OK" Margin="70,280,150,130" Click="OK_Click">Ok</Button>
        <Button x:Name="Cancel" Click="CancelDial" Margin="160,280,60,130">Cancel</Button>
    </Grid>
</Window>
